{
    "name": "athphane/filament-support",
    "description": " Helper traits, base component configs, and shared utilities.",
    "keywords": [
        "athphane",
        "laravel",
        "filament-support",
        "filament"
    ],
    "homepage": "https://github.com/athphane/filament-support",
    "license": "MIT",
    "authors": [
        {
            "name": "Athfan Khaleel",
            "email": "athphane@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0 || ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Athphane\\FilamentSupport\\": "src/",
            "Athphane\\FilamentSupport\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Athphane\\FilamentSupport\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Athphane\\FilamentSupport\\FilamentSupportServiceProvider"
            ],
            "aliases": {
                "FilamentSupport": "Athphane\\FilamentSupport\\Facades\\FilamentSupport"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
